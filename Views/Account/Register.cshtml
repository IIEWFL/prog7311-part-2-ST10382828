@model Prog7311_Part2.Models.ViewModels.RegisterFarmerViewModel

@{
    ViewData["Title"] = "Register Farmer";
}

<div class="row justify-content-center">
    <div class="col-md-8 auth-form-container">
        <div class="card shadow">
            <div class="card-header bg-sky-blue text-white position-relative overflow-hidden">
                <div class="position-absolute end-0 top-50 translate-middle-y bg-white rounded-circle" style="width: 50px; height: 50px; opacity: 0.1;"></div>
                <h2 class="text-center mb-0 fw-bold">Register as Farmer</h2>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <h4 class="mb-3 text-sky-blue"><i class="fas fa-user-circle me-2"></i>Account Information</h4>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Username" class="control-label"></label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Password" class="form-control" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <h4 class="mb-3 text-sky-blue"><i class="fas fa-tractor me-2"></i>Farmer Profile</h4>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FarmerName" class="control-label">Farm Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-farm"></i></span>
                                    <input asp-for="FarmerName" class="form-control" />
                                </div>
                                <span asp-validation-for="FarmerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Location" class="control-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    <input asp-for="Location" class="form-control" />
                                </div>
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Farm Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group d-flex justify-content-between form-button-container">
                        <button type="submit" class="btn btn-sky-blue">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </button>
                        <a asp-action="Login" class="btn btn-outline-sky-blue">
                            <i class="fas fa-sign-in-alt me-2"></i>Already have an account?
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 