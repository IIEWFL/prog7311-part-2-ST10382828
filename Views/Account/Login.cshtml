@model Prog7311_Part2.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 auth-form-container">
        <div class="card shadow">
            <div class="card-header bg-sky-blue text-white position-relative overflow-hidden">
                <div class="position-absolute end-0 top-50 translate-middle-y bg-white rounded-circle" style="width: 50px; height: 50px; opacity: 0.1;"></div>
                <h2 class="text-center mb-0 fw-bold">Login</h2>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    @if (ViewData.ContainsKey("ErrorMessage"))
                    {
                        <div class="alert alert-danger">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                    
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="Username" class="form-control" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label asp-for="Password" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group d-flex justify-content-between form-button-container">
                        <button type="submit" class="btn btn-sky-blue">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                        <a asp-action="Register" class="btn btn-outline-sky-blue">
                            <i class="fas fa-user-plus me-2"></i>Register New Account
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 