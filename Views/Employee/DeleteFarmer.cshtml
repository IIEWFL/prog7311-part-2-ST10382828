@model Prog7311_Part2.Models.Farmer

@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fas fa-exclamation-triangle me-2"></i>Delete Farmer</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4>Warning</h4>
                        <p>Are you sure you want to delete this farmer? This will permanently remove the farmer, their account, and <strong>all their products</strong>. This action cannot be undone.</p>
                    </div>
                
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4>@Model.Name</h4>
                            <p><strong>Location:</strong> @Model.Location</p>
                            <p><strong>Phone:</strong> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber)</p>
                            <p><strong>Registered:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
                            <p><strong>Products:</strong> @Model.Products.Count items</p>
                            <p><strong>Username:</strong> @Model.User.Username</p>
                            <p><strong>Email:</strong> @Model.User.Email</p>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">Details</h5>
                                    <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "No description provided." : Model.Description)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="DeleteFarmer" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 