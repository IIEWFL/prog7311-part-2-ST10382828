@{
    ViewData["Title"] = "Filter Products";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2>Advanced Product Filtering</h2>
                </div>
                <div class="card-body">
                    <form asp-action="FilterProducts" method="post">
                        <input type="hidden" name="pageNumber" value="1" />
                        
                        <div class="row mb-3">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="farmerId" class="control-label">Farmer</label>
                                    <select id="farmerId" name="farmerId" class="form-select">
                                        <option value="">-- All Farmers --</option>
                                        @foreach (var farmer in ViewBag.Farmers)
                                        {
                                            <option value="@farmer.Id">@farmer.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="category" class="control-label">Category</label>
                                    <select id="category" name="category" class="form-select">
                                        <option value="">-- All Categories --</option>
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category">@category</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="startDate" class="control-label">Production Date From</label>
                                    <input type="date" id="startDate" name="startDate" class="form-control" />
                                    <small class="text-muted">Products on or after this date</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="endDate" class="control-label">Production Date To</label>
                                    <input type="date" id="endDate" name="endDate" class="form-control" />
                                    <small class="text-muted">Products on or before this date</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 