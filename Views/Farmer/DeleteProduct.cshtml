@model Prog7311_Part2.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Product</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4>Confirm Deletion</h4>
                        <p>Are you sure you want to delete this product? This action cannot be undone.</p>
                    </div>
                
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h4>@Model.Name</h4>
                            <p><strong>Category:</strong> <span class="badge bg-sky-blue text-white">@Model.Category</span></p>
                            <p><strong>Price:</strong> R @Model.Price.ToString("F2")</p>
                            <p><strong>Production Date:</strong> @Model.ProductionDate.ToString("yyyy-MM-dd")</p>
                            <p><strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</p>
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="text-center">
                                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid img-thumbnail" style="max-height: 200px" />
                                </div>
                            }
                        </div>
                    </div>
                    
                    <form asp-action="DeleteProduct" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="ViewProducts" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 